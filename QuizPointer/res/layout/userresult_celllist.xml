<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/userResultCellList" 
    android:background="#ffffff"
   >

    <TableRow
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:background="#ffffff"  
        android:weightSum="4.01"
        android:gravity="center"
        android:paddingLeft="@dimen/padding_result"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        >
    	<ImageView
    	    android:id="@+id/checkbox"
    		android:layout_width="0dp"
    		android:layout_height="@dimen/checkbox_height"
    		android:layout_weight="0.25"
    		android:layout_marginLeft="10dp"
    		android:background="@drawable/checkboxdefault"
    	    />
    	    
    	<TextView
    	    android:id="@+id/tv_date"
    		android:layout_width="0dp"
    		android:layout_height="wrap_content"
    		android:layout_weight="1.75"
    		android:text="11 Februari 2015"
    		android:textColor="#000000"
    		android:gravity="center"
    		android:textSize="@dimen/userresult_text"
    	    />
    	    
    	<TextView
    	    android:id="@+id/tv_package"
    		android:layout_width="0dp"
    		android:layout_height="wrap_content"
    		android:layout_weight="1"
    		android:text="Package A"
    		android:gravity="center|right"
    		android:textSize="@dimen/userresult_text"
    		android:textColor="#000000"
    	    />
    	
    	<TextView
    	    android:id="@+id/tv_count"
    		android:layout_width="0dp"
    		android:layout_height="wrap_content"
    		android:layout_weight="1"
    		android:gravity="center"
    		android:text="6/10"
    		android:textSize="@dimen/userresult_text"
    		android:textColor="#000000"
    	    />
    	
    	
        
    </TableRow>
    
      <View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:layout_gravity="center_vertical"
			android:background="@android:color/darker_gray"/> 
    
</TableLayout>
