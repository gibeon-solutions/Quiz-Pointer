<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popupExplanation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/panelexplanation"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="3" >
    
    <Button
        android:id="@+id/btnclose"
        android:layout_width="@dimen/close_buttonwidth"
        android:layout_height="@dimen/close_buttonheight"
        android:background="@drawable/bclose"
        android:layout_gravity="right"
        android:layout_weight="0.15"
        android:layout_margin="10dp"
        />
    
    <ImageView
        android:id="@+id/iv_textexplanation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:background="@drawable/explanationtext"
    
        />
        
      <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.6"
        >

    	<TextView
    	    android:id="@+id/explanation_text"
    	    android:layout_width="match_parent"
    	    android:layout_height="match_parent"
    	    android:paddingBottom="15dp"
    	    android:paddingLeft="15dp"
    	    android:paddingRight="15dp"
    	    android:paddingTop="10dp"
    	    android:text="@string/explanationtext"
    	    android:textSize="22sp" />

    </ScrollView>
   
   
</LinearLayout>
