<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:weightSum="16"
    android:background="#ffffff"
    android:id="@+id/pageAdmin">
    
    <TextView 
        android:id="@+id/title"
    	android:layout_width="match_parent"
    	android:layout_height="0dp"
    	android:layout_weight="1.5"
    	android:text="@string/title"
    	android:textColor="#ffffff"
    	android:background="#000000"
    	android:textSize="@dimen/title_size"
    	android:textStyle="bold"
    	android:gravity="center"/>
    
    <TextView 
        android:id="@+id/welcome_text"
    	android:layout_width="match_parent"
    	android:layout_height="0dp"
    	android:text="@string/welcome_text"
    	android:textColor="#ffffff"
    	android:textSize="@dimen/welcometext_size"
    	android:gravity="center"
    	android:layout_weight="1"
        android:background="#3498DB"/>
    
    <View
		android:layout_width="match_parent"
		android:layout_height="4dp"
		android:layout_weight="0.01"
		android:layout_gravity="center_vertical"
		android:background="#2980B9"/>
    
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_gravity="center"
        android:layout_weight="6">
        <ImageView
            android:id="@+id/img_logo"
        	android:layout_width="220dp"
        	android:layout_height="220dp"
        	android:scaleType="fitXY"
        	android:background="@drawable/adminbackground"/>
    </TableRow>
    
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5.2"
        android:layout_gravity="center"
        android:weightSum="4">
        
    	<ImageButton
    	    android:id="@+id/button_setpackages"
    	    android:layout_width="wrap_content"
        	android:layout_height="@dimen/bsetpackage_height"
        	android:layout_marginTop="10dp"
        	android:layout_marginRight="10dp"
        	android:layout_marginLeft="10dp"
        	android:layout_weight="0.3"
        	android:background="@drawable/bpackageson"/>  
        	  
        <ImageButton
    	    android:id="@+id/button_result"
    	    android:layout_width="wrap_content"
        	android:layout_height="@dimen/buserresult_height"
        	android:layout_marginTop="15dp"
        	android:layout_marginRight="10dp"
        	android:layout_marginLeft="10dp"
        	android:layout_weight="0.3"
        	android:background="@drawable/bresulton"/>  
        	
    </TableLayout>
    
      <TableRow
        android:id="@+id/tr_buttonlogout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.29"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:background="#ffffff">
        <Button
            android:id="@+id/buttonlogout"
        	android:layout_width="200dp"
       	 	android:layout_height="wrap_content"
        	android:layout_gravity="center|bottom"
        	android:background="@drawable/blogout"/>
      </TableRow>

</LinearLayout>
