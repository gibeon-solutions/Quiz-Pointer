<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/page_UserResult" >

    <TableRow
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@drawable/listsaveresult" >
       
        <TextView
        	android:id="@+id/user_list"
        	android:layout_width="match_parent"
        	android:layout_height="@dimen/user_size" 
      		android:paddingLeft="@dimen/padding_choiceanswer"
        	android:text="@string/user"
        	android:layout_gravity="center"
        	android:gravity="center"
        	android:textColor="#ffffff"
        	android:textSize="@dimen/userlist_text" />
       
   	</TableRow>
  
    <TableRow
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:background="#ffffff"  
        android:weightSum="4"
        android:gravity="center"
        android:paddingLeft="@dimen/padding_result"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        
    	<ImageView
    	    android:id="@+id/checkbox"
    		android:layout_width="0dp"
    		android:layout_height="@dimen/checkbox_height"
    		android:layout_weight="0.3"
    		android:layout_marginLeft="10dp"
    		android:background="@drawable/checkboxdefault"
    	    />
    	    
    	<TextView
    	    android:id="@+id/tv_date"
    		android:layout_width="0dp"
    		android:layout_height="wrap_content"
    		android:layout_weight="1.7"
    		android:text="11 Februari 2015"
    		android:textColor="#000000"
    		android:gravity="center"
    		android:textSize="@dimen/userresult_text"
    	    />
    	    
    	<TextView
    	    android:id="@+id/tv_package"
    		android:layout_width="0dp"
    		android:layout_height="wrap_content"
    		android:layout_weight="1"
    		android:text="Package A"
    		android:gravity="center|right"
    		android:textSize="@dimen/userresult_text"
    		android:textColor="#000000"
    	    />
    	
    	<TextView
    	    android:id="@+id/tv_count"
    		android:layout_width="0dp"
    		android:layout_height="wrap_content"
    		android:layout_weight="1"
    		android:gravity="center"
    		android:text="6/10"
    		android:textSize="@dimen/userresult_text"
    		android:textColor="#000000"
    	    />
        
    </TableRow>
    
      <View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:layout_gravity="center_vertical"
			android:background="@android:color/darker_gray"/> 
    
</TableLayout>
